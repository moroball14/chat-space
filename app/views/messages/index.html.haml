.flash-box グループを作成しました。

.chat-left-side
  .left-header
    .main
      %p.main__name username
      %ul.main__menu
        %li.main__menu-icon
          = link_to "#", class: "main__menu-icon--edit" do
            = fa_icon 'edit'
        %li.main__menu-icon
          = link_to "#", class: "main__menu-icon--cog" do
            = fa_icon 'cog'

  .left-body
    = render partial: "group"

.chat-right-side
  .right-header
    .header-title
      %h1.group-name ここにもgroup-name
      %ul.member member :
      = render partial: "member"
    .edit-group
      = link_to "#", class: "edit-btn" do
        Edit
        
  .right-body
    = render partial: "message"

  .right-bottom
    .input-form
      .input-form__text-box
        %input.input-box-text{placeholder: "type a message"}
        %label.input-box-image
        = link_to"#", class: "input-box-image" do
          = fa_icon 'image'
      %input.input-form__submit-btn{type: "submit", value: "Send"}